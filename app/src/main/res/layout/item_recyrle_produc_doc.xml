<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="245dp"    android:layout_margin="10dp"    android:background="@drawable/item_recycle"    android:orientation="vertical"    android:paddingLeft="12dp"    android:paddingTop="10dp"    app:cardCornerRadius="10dp"    app:cardElevation="3dp"    app:cardBackgroundColor="@color/white"    android:paddingRight="14dp"    android:paddingBottom="18dp">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <FrameLayout            android:id="@+id/frameLayout2"            android:layout_width="match_parent"            android:layout_height="160dp"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent">            <ImageView                android:id="@+id/item_vertical_produc_imgshow"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:src="@drawable/tree2" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="42dp"                android:layout_gravity="bottom"                android:alpha="0.5"                android:background="#E9E9E9" />            <LinearLayout                android:gravity="center|start"                android:layout_width="match_parent"                android:layout_height="42dp"                android:layout_gravity="bottom"                android:orientation="vertical"                android:paddingLeft="10dp"                android:paddingTop="5dp"                android:paddingBottom="5dp">                <TextView                    android:id="@+id/item_vertical_produc_tvTenSanPham"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="XƯƠNG RỒNG CẢNH"                    android:textColor="#2C2C2C"                    android:textSize="10sp"                    android:textStyle="bold" />                <TextView                    android:id="@+id/item_vertical_produc_tvGiaSanPham"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="120.000đ"                    android:textColor="#8BB14F"                    android:textSize="10sp"                    android:textStyle="bold" />            </LinearLayout>        </FrameLayout>        <TextView            android:id="@+id/item_vertical_produc_tvXuatXuSanPham"            android:layout_width="wrap_content"            android:layout_height="wrap_content"             android:layout_marginLeft="10dp"            android:layout_marginTop="4dp"            android:text="Xuất xứ: Đà Lạt"            android:textColor="#525252"            android:textSize="5sp"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintHorizontal_bias="0"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />        <TextView            android:id="@+id/item_vertical_produc_tvLoaiSanPham"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="10dp"            android:text="Loại: cây cảnh vườn"            android:textColor="#525252"            android:textSize="5sp"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintHorizontal_bias="0"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/item_vertical_produc_tvXuatXuSanPham" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="27dp"            android:orientation="vertical"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent">            <View                android:layout_width="match_parent"                android:layout_height="0.5dp"                android:background="#D4D4D4"                android:layout_marginRight="10dp"                android:layout_marginLeft="10dp"/>            <LinearLayout                android:layout_width="match_parent"                android:gravity="center"                android:layout_height="match_parent">                <LinearLayout                    android:id="@+id/item_vertical_produc_lv_btnDatMua"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content">                    <ImageView                        android:layout_width="9dp"                        android:layout_height="9dp"                        android:background="@drawable/add_green"                        android:layout_gravity="center"                        android:layout_marginRight="3dp"/>                    <TextView                        android:textSize="10sp"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="ĐẶT MUA"                        android:layout_gravity="center"                        android:textStyle="bold"                        android:textColor="#B8CE95"/>                </LinearLayout>            </LinearLayout>        </LinearLayout>    </androidx.constraintlayout.widget.ConstraintLayout></androidx.cardview.widget.CardView>